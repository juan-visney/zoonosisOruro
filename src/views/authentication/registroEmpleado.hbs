<div class="container">
    <div class="row py-5 mt-4 align-items-center">
             
        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 ml-auto">
            <form action="/registro" method="POST">
                <div class="row">
                    
                    <!-- Cargo -->
                    <input type="hidden" name="cargo" value="empleado">
                    

                    <!-- Nombre -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-file-signature"></i>
                            </span>
                        </div>
                        <input required id="nombre" type="text" name="nombre" placeholder="Nombre completo" class="form-control bg-white border-left-0 border-md">
                    </div>
                    
                    <!-- Carnet -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="far fa-user-circle"></i>
                            </span>
                        </div>
                        <input required id="ci" type="text" name="ci" placeholder="Numero de Carnet" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Celular -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-phone"></i>
                            </span>
                        </div>
                        <input required id="celular" type="text" name="celular" placeholder="Numero de Celular" class="form-control bg-white border-left-0 border-md">
                    </div>
 
                     <!-- foto -->
                    <form action="/registroBusiness" method="post" enctype="multipart/form-data">
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fas fa-camera-retro"></i>
                                    <label for="photo" class="mx-2">Fotografia:</label>
                                    <input type="file" id="foto" name="foto">
                                </span>
                            </div>
                        </div>
                    </form>
                    
                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <button class="btn btn-primary btn-block py-2">
                            <span class="font-weight-bold">Agregar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>