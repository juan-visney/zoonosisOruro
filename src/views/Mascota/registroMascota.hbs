<div class="container">
    <div class="row py-5 mt-4 align-items-center">
             
        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 ml-auto">
            <form action="/operador/registrarMascota" method="POST">
                <div class="row">
                    
                    <!-- Id Usuario -->
                    <input type="hidden" name="idUsuario" value="{{idUsuario}}">

                    <!-- Especie -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-paw"></i>
                            </span>
                        </div>
                        <input required id="especie" type="text" name="especie" placeholder="Especie (:perro,gato,etc.)" class="form-control bg-white border-left-0 border-md">
                    </div>
                    
                    <!-- Color -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-palette"></i>
                            </span>
                        </div>
                        <input id="color" type="text" name="color" placeholder="Color" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- Edad -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-baby-carriage"></i>
                            </span>
                        </div>
                        <input id="edad" type="text" name="edad" placeholder="Edad Aproximada" class="form-control bg-white border-left-0 border-md">
                    </div>
                    <!-- Sexo -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fas fa-venus-mars"></i>
                            </span>
                        </div>
                        <input id="sexo" type="text" name="sexo" placeholder="Sexo (:Macho, Hembra)" class="form-control bg-white border-left-0 border-md">
                    </div>
                     <!-- foto -->
                    <form action="/registroBusiness" method="post" enctype="multipart/form-data">
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fas fa-camera-retro"></i>
                                    <label for="photo" class="mx-2">Fotografia:</label>
                                    <input type="file" id="foto" name="foto">
                                </span>
                            </div>
                        </div>
                    </form>
                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <button class="btn btn-primary btn-block py-2">
                            <span class="font-weight-bold">Agregar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>